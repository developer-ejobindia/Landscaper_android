<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Driver's License"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/green_gradient"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/feature_image"
        android:id="@+id/ivLicense"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
        <LinearLayout
            android:id="@+id/lnLicenseImage"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:background="#87000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_camera"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.seazoned.landscaper.customtext.Custom_Text_View_SemiBold
            android:visibility="gone"
            android:id="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/green_gradient"
            android:gravity="center"
            android:text="Choose"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="16dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
        <com.seazoned.landscaper.customtext.Custom_Text_View_SemiBold
            android:id="@+id/tvUpdate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/green_gradient"
            android:gravity="center"
            android:text="Update Driver's License"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>