<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size of Driveway"
                        android:textColor="@color/colorActiveNavText"
                        android:textSize="16sp" />
                    <!-- android:text="Car Fit in Driveway"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Driveway fitting up to 2 standard cars base price"

                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />
                        <!--
                                                android:text="First 2 car "
                        -->

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etFirstPrice"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Every 2 car increase price add on"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />
                        <!--  android:text="Next each 2 car increase"-->
                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etNextPrice"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max number of cars that would fit in driveway you are willing to service?"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etUpperLimit"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driveway Type (add on pricing)"
                        android:textColor="@color/colorActiveNavText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Straight"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etStraight"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            android:hint="$0.00"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Circular"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etCircular"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            android:hint="$0.00"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incline"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etIncline"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            android:hint="$0.00"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snow Removal Service type (add on pricing)"
                        android:textColor="@color/colorActiveNavText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Front Door Walk Way"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etFront"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            android:hint="$0.00"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stairs and Front Landing"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etStairs"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            android:hint="$0.00"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side Door Walk Way"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />

                        <com.seazoned.landscaper.customtext.Custom_EditText
                            android:id="@+id/etSide"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorWhite"
                            android:gravity="center_vertical"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            android:hint="$0.00"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorUnderLine" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbCheckRecurring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:text="Recurring services"
                        android:textColor="@color/colorLabel"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorUnderLine"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/lnRecurring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Every 7 days"
                                android:textColor="@color/colorActiveNavText"
                                android:textSize="16sp" />

                            <com.seazoned.landscaper.customtext.Custom_EditText
                                android:id="@+id/etSevenDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@color/colorWhite"
                                android:gravity="center_vertical"
                                android:hint="@string/hintPrice"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal|numberSigned"
                                android:maxLines="1"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorUnderLine" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Every 10 days"
                                android:textColor="@color/colorActiveNavText"
                                android:textSize="16sp" />

                            <com.seazoned.landscaper.customtext.Custom_EditText
                                android:id="@+id/etTenDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@color/colorWhite"
                                android:gravity="center_vertical"
                                android:hint="@string/hintPrice"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal|numberSigned"
                                android:maxLines="1"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorUnderLine" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Every 14 days"
                                android:textColor="@color/colorActiveNavText"
                                android:textSize="16sp" />

                            <com.seazoned.landscaper.customtext.Custom_EditText
                                android:id="@+id/etFourteenDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@color/colorWhite"
                                android:gravity="center_vertical"
                                android:hint="@string/hintPrice"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal|numberSigned"
                                android:maxLines="1"
                                android:textColor="@color/colorText"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorUnderLine" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                    android:id="@+id/tvPricingPrev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/pricingPreview"
                    android:textColor="@color/colorActiveNavText"
                    android:textSize="15sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/lnPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <com.seazoned.landscaper.customtext.Custom_Text_View_SemiBold
            android:id="@+id/tvSave"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/signin_gradient"
            android:gravity="center"
            android:text="save"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </LinearLayout>
</layout>
