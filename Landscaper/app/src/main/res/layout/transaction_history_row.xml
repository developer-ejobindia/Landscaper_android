<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/lnHistory"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/ic_launcher_round" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <com.seazoned.landscaper.customtext.Custom_Text_View_SemiBold
                    android:id="@+id/tvFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <com.seazoned.landscaper.customtext.Custom_Text_View
                            android:id="@+id/tvOrderNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorLabel"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <com.seazoned.landscaper.customtext.Custom_Text_View_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tvPrice"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.seazoned.landscaper.customtext.Custom_Text_View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPaymentDate"
                        android:textColor="@color/colorLabel"
                        android:textSize="14sp" />

                    <com.seazoned.landscaper.customtext.Custom_Text_View
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:visibility="visible"
                        android:id="@+id/tvStatus"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>